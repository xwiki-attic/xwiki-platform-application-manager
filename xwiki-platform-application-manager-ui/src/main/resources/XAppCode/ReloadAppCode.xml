  <content>#if($action &amp;&amp; $action == "reload")
  #set($result = $AppManager.reloadApplication($appname))
  #if ($result == $Exception.ERROR_NOERROR)
    #info($services.localization.render('xapp.successreloadapp', [$appname]))
  #elseif ($result == $Exception.ERROR_XWIKI_ACCESS_DENIED)
    #error($services.localization.render('notallowed'))
  #else
    #error($services.localization.render('xapp.errorreloadapp', [$appname, $result]))
  #end
#end
